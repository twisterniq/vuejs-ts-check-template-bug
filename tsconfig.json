{
  "compilerOptions": {
    "target": "es2022",
    "moduleDetection": "force",
    "baseUrl": "./",
    "module": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
